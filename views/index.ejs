<% include partials/header.ejs%>

        <div class="container">
            <h4 class="center-align">Rating movies one potato at a time</h4>
                <div class="row">    
                <% movies.forEach((singleMovie)=> { %>
                <div class="col s6 m4">
                <div class="card z-depth-4">
                    <div class="card-image">
            <a href="http://localhost:8080/movie/<%=singleMovie.id%>"><img src="https://image.tmdb.org/t/p/w342/<%=singleMovie.poster_path %>"></a>
            </div>
            <a href="http://localhost:8080/movie/<%=singleMovie.id%>"><p class="card-title center-align"><%= singleMovie.title %></p></a>
            <div class="card-content center-align">
              <h5><%= singleMovie.vote_average %><img class="potato" src="images/potato.png"></h5>
            </div>
            <div class="card-action center-align">
              <a href="http://localhost:8080/movie/<%=singleMovie.id%>">Overview</a>
            </div>
          </div>
        </div>
        <% })%>
      </div>
      </div>
      
<% include partials/footer.ejs%>