<% include partials/header.ejs%>

        <div class="container center-align">
            <h1>Results</h1>
           
            
            <div class="row">
             <% if (movieQuery.length === 0){%>
            <h1>Nothing Found </h1>
            <% }%>
            <% movieQuery.forEach((movie)=> { %>
                <div class="col s6 m4">
                <div class="card z-depth-4">
                    <div class="card-image">
            <a href="http://localhost:8080/movie/<%=movie.id%>"><img src="https://image.tmdb.org/t/p/w342/<%=movie.poster_path %>"></a>
            </div>
            <a href="http://localhost:8080/movie/<%=movie.id%>"><p class="card-title center-align"><%= movie.title %></p></a>
            <div class="card-content center-align">
              <p><%= movie.vote_average %><img class="potato" src="images/potato.png"></p>
            </div>
            <div class="card-action center-align">
              <a href="http://localhost:8080/movie/<%=movie.id%>">Overview</a>
            </div>
          </div>
        </div>
        <% })%>
      </div>
      </div>
<% include partials/footer.ejs%>